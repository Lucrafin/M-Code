let
    Source = Excel.CurrentWorkbook(){[Name = "Table1"]}[Content],
    R = Table.FromRows(
        List.Accumulate(
            Table.ToRows(Source),
            {},
            (s, c) =>
                let
                    l = List.Last(s), i = Byte.From(c{2} = null)
                in
                    List.RemoveLastN(s, i) & {{{c{0}, c{1}, c{2}, 0}, {l{0}, l{1}, l{2}, l{3} + c{1}}}{i}}
        ),
        {"Store", "Date", "Task", "Amount"}
    )
in
    R
